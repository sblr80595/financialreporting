{
    "note_number": "CASHFLOW",
    "note_title": "Cash Flow Statement (Lifeline Holdingd)",
    "statement_type": "cashflow",
    "method": "INDIRECT",
    "period_column": "Total June 25",
    "prior_period_column": "Total Mar 25",
    "summation_rule": "Algebraic sum (preserve signs: debits positive, credits negative)",
    
    "auxiliary_files": [
        {
            "file_name": "BS_Statement_*.xlsx",
            "file_path": "data/lifeline_holdings/output/financial_statements/BS/",
            "purpose": "For prior period balance sheet values (working capital)",
            "required": true
        },
        {
            "file_name": "PL_Statement_*.xlsx",
            "file_path": "data/lifeline_holdings/output/financial_statements/PL/",
            "purpose": "Extract Profit Before Tax (PBT)",
            "required": true
        }
    ],
    
    "sections": {
        "operating_activities": {
            "title": "Cash flows from operating activities",
            "starting_point": {
                "line_item": "Profit/(Loss) before tax but after exceptional items",
                "ind_as_minor": ["Profit Before Tax", "PBT", "Profit before taxation", "Profit/(Loss) before tax but after exceptional items"]
            },
            
            "adjustments_section": {
                "title": "Adjustments for:",
                "categories": [
                    {
                        "line_item": "Interest on Borrowings (Finance Cost)",
                        "ind_as_minor": ["Finance Costs", "Interest on Borrowings", "Borrowing Costs"],
                        "display_in_summary": true
                    },
                    {
                        "line_item": "Depreciation on property, plant and equipment and right of use assets",
                        "ind_as_minor": ["Depreciation - PPE", "Depreciation - ROU", "Depreciation Expense"],
                        "display_in_summary": true
                    },
                    {
                        "line_item": "Amortisation on intangible assets",
                        "ind_as_minor": ["Amortisation - Intangible", "Intangible Amortisation"],
                        "display_in_summary": true
                    },
                    {
                        "line_item": "Provision for expected credit losses",
                        "ind_as_minor": ["Provision for Bad Debts", "ECL Provision"],
                        "display_in_summary": true
                    },
                    {
                        "line_item": "Interest income (Net)",
                        "ind_as_minor": ["Interest Income", "Income from Deposits"],
                        "display_format": "-(value)",
                        "display_in_summary": true
                    }
                ]
            },
            
            "subtotal_1": {
                "line_item": "Operating profit before working capital changes",
                "format": "bold"
            },
            
            "working_capital_changes": {
                "title": "Changes in working capital",
                "categories": [
                    {
                        "line_item": "Movement in trade payables",
                        "ind_as_minor": ["Trade Payables", "Creditors"],
                        "calculation": "(current - prior)"
                    },
                    {
                        "line_item": "Movement in other liabilities (incl. Contract Liabilities)",
                        "ind_as_minor": ["Other Current Liabilities", "Contract Liabilities", "Statutory Dues"],
                        "calculation": "(current - prior)"
                    },
                    {
                        "line_item": "Decrease/(Increase) in loans and advances and other current assets",
                        "ind_as_minor": ["Loans and Advances - Current", "Other Current Assets", "Prepaid Expenses"],
                        "calculation": "-(current - prior)"
                    }
                ]
            },
            
            "subtotal_2": {
                "line_item": "Cash generated from/(used in) operations",
                "format": "bold"
            },
            
            "tax_paid": {
                "line_item": "Income tax paid (net)",
                "ind_as_minor": ["Income Tax Paid", "Tax Paid"],
                "display_format": "-(value)"
            },
            
            "section_total": {
                "line_item": "Net cash flows from/ (used in) operating activities [A]",
                "format": "bold_underline"
            }
        },
        
        "investing_activities": {
            "title": "Cash flows from investing activities",
            
            "categories": [
                {
                    "line_item": "Purchase of property, plant and equipment and intangible assets",
                    "ind_as_minor": ["PPE Additions", "Capital Expenditure", "Purchase of PPE", "Intangible Asset Additions"],
                    "display_format": "-(value)"
                },
                {
                    "line_item": "Proceeds from disposal of property, plant and equipment",
                    "ind_as_minor": ["Sale of PPE", "Proceeds from Asset Sale"]
                },
                {
                    "line_item": "Proceeds from disposal of subsidiary",
                    "ind_as_minor": ["Sale of Subsidiary", "Disposal of Subsidiary"]
                },
                {
                    "line_item": "Interest received",
                    "ind_as_minor": ["Interest Received", "Interest Income Received"]
                },
                {
                    "line_item": "Dividend income received",
                    "ind_as_minor": ["Dividend Received", "Dividend Income Received"]
                }
            ],
            
            "section_total": {
                "line_item": "Net cash used in investing activities [B]",
                "format": "bold_underline"
            }
        },
        
        "financing_activities": {
            "title": "Cash flows from financing activities",
            
            "categories": [
                {
                    "line_item": "Proceeds from rights issue of equity share capital",
                    "ind_as_minor": ["Proceeds from Share Issue", "Equity Issue Proceeds"]
                },
                {
                    "line_item": "Proceeds from non-current borrowings",
                    "ind_as_minor": ["Long Term Borrowings - Proceeds", "Term Loan Proceeds"]
                },
                {
                    "line_item": "Repayments of non-current borrowings",
                    "ind_as_minor": ["Long Term Borrowings - Repayment", "Repayment of Term Loans"],
                    "display_format": "-(value)"
                },
                {
                    "line_item": "Payment of principal portion of lease liabilities",
                    "ind_as_minor": ["Lease Liability Payment - Principal", "Payment of Lease Liabilities"],
                    "display_format": "-(value)"
                },
                {
                    "line_item": "Interest paid (on borrowings and lease liabilities)",
                    "ind_as_minor": ["Interest Paid - Borrowings", "Interest Paid - Lease", "Finance Costs Paid"],
                    "display_format": "-(value)"
                }
            ],
            
            "section_total": {
                "line_item": "Net cash (used in)/flows from financing activities [C]",
                "format": "bold_underline"
            }
        },
        
        "reconciliation": {
            "title": "Cash and cash equivalents reconciliation",
            "components": [
                {
                    "line_item": "Net (decrease)/ increase in cash and cash equivalents [A+B+C]",
                    "format": "bold_underline"
                },
                {
                    "line_item": "Cash and cash equivalents at the beginning of the period",
                    "source": "Balance_Sheet_Total_Mar_2025.xlsx",
                    "ind_as_minor": ["Cash and Cash Equivalents", "Cash & Bank Balances"]
                },
                {
                    "line_item": "Cash and cash equivalents at the end of the period",
                    "format": "bold_double_underline"
                }
            ]
        },
        
        "cash_breakdown": {
            "title": "Cash and cash equivalents include (refer note 11)",
            "categories": [
                {
                    "line_item": "Cash on hand",
                    "ind_as_minor": ["Cash in Hand", "Cash"]
                },
                {
                    "line_item": "Balance with banks - On current accounts",
                    "ind_as_minor": ["Bank Balance - Current Account", "Current Account"],
                    "indent": 1
                }
            ]
        },
        
        "non_cash_activities": {
            "title": "Non- cash financing and investing activities:",
            "categories": [
                {
                    "line_item": "Acquisition of right-of-use assets (Lease Liability)",
                    "ind_as_minor": ["ROU Asset Additions", "Right of Use Asset Acquired"],
                    "indent": 1
                }
            ]
        }
    },
    
    "output_structure": {
        "format": "table",
        "sections": [
            { "type": "header", "content": "# CASH FLOW STATEMENT (INDIRECT METHOD)\n## For the period ended Total June 2025" },
            { "type": "section", "section_key": "operating_activities", "include_subsections": true },
            { "type": "section", "section_key": "investing_activities" },
            { "type": "section", "section_key": "financing_activities" },
            { "type": "section", "section_key": "reconciliation" },
            { "type": "section", "section_key": "cash_breakdown" },
            { "type": "section", "section_key": "non_cash_activities" }
        ]
    },
    
    "formatting_rules": {
        "amount_format": "indian_rupee",
        "negative_display": "brackets",
        "bold_items": ["section_totals", "subtotals", "reconciliation_totals"],
        "underline_items": ["final_totals"],
        "indent_levels": {
            "main_items": 0,
            "sub_items": 1,
            "detail_items": 2
        }
    },
    
    "validation_rules": [
        "A + B + C = Net Change in Cash",
        "Closing Cash must match Balance Sheet (Total June 2025)",
        "Working Capital: Liability Increase = Positive, Asset Increase = Negative",
        "All amounts in Indian Rupee format (â‚¹1,23,456)",
        "Cash outflows shown in brackets (e.g., (1,23,456))"
    ]
}